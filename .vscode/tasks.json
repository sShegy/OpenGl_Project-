{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build OpenGL Project (macOS)",
            "command": "clang",
            "args": [
                "-g",
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/src/glad.c",
                "-o",
                "${workspaceFolder}/main_program",
                "-I",
                "${workspaceFolder}/lib/GLAD",
                "-I/opt/homebrew/include",
                "-L/opt/homebrew/lib",
                "-lglfw",
                "-framework", "OpenGL",
                "-framework", "Cocoa",
                "-framework", "IOKit"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}